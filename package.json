{
  "name": "express-app-testing-demo",
  "description": "a simple express.js app for demonstrating testing and code coverage",
  "version": "0.0.1",
  "engines": {
    "node": ">=6.11.x"
  },
  "private": true,
  "main": "app/server.js",
  "scripts": {
    "start": "nodemon app/server.js",
    "test": "jest test/{unit,route}/*.test.js --coverage",
    "test:api": "jest --runInBand test/api/*.test.js",
    "lint": "eslint app/** test/** --ignore-pattern test/coverage",
    "prettier": "prettier --single-quote --write app/*.js test/**/*.test.js"
  },
  "dependencies": {
    "ejs": "~2.5.7",
    "express": "~4.15.4",
    "got": "^7.1.0",
    "serve-favicon": "^2.4.4"
  },
  "devDependencies": {
    "eslint": "^4.6.1",
    "jest": "^21.0.2",
    "nodemon": "^1.12.0",
    "prettier": "^1.7.0",
    "supertest": "~3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gregjopa/express-app-testing-demo"
  },
  "prettier": {

  }
}
