{
  "name": "express-app-testing-demo",
  "description": "a simple express.js app for demonstrating testing and code coverage",
  "version": "0.0.1",
  "engines": {
    "node": "0.10.x"
  },
  "private": true,
  "main": "app/app.js",
  "scripts": {
    "start": "nodemon app/app.js",
    "test": "jest test/{unit,route}/*.test.js --coverage",
    "test:api": "jest --runInBand test/api/*.test.js",
    "lint": "eslint app/** test/** --ignore-pattern test/coverage"
  },
  "dependencies": {
    "express": "~3.4.8",
    "ejs": "~0.8.5",
    "request": "~2.33.0"
  },
  "devDependencies": {
    "eslint": "^4.6.1",
    "jest": "^21.0.2",
    "nock": "~0.27.2",
    "nodemon": "^1.12.0",
    "supertest": "~0.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gregjopa/express-app-testing-demo"
  }
}
